<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        >


  <ImageView
     android:id="@+id/champion_statistics_champ_image"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_weight="0.19"
     android:src="@drawable/pantheon"/>
 

  <TextView
      android:id="@+id/champion_statistics_champion_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="0.19"
        />
  <TextView
      android:id="@+id/champion_statistics_champion_winrate"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="0.1"
        />
  <TextView
    android:id="@+id/champion_statistics_champion_wins"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.1"
        />
  <TextView
    android:id="@+id/champion_statistics_champion_loses"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.1"
        />
  <TextView
    android:id="@+id/champion_statistics_champion_kda"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.1"
        />

  <TextView
  android:id="@+id/champion_statistics_champion_minionkills"
  android:layout_width="0dp"
  android:layout_height="wrap_content"
  android:layout_weight="0.1"
        />

  <TextView
  android:id="@+id/champion_statistics_champion_avgGameDuration"
  android:layout_width="0dp"
  android:layout_height="wrap_content"
  android:layout_weight="0.1"
        />

</LinearLayout>